---
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;
---

<Layout>
  <article
    class="prose max-w-none prose-a:text-strong-blue prose-a:no-underline prose-a:shadow-link-underline prose-h2:text-3xl pb-6"
  >
    <h1 class="text-strong-blue">{frontmatter.title}</h1>
    <slot />
  </article>
  <section class="max-w-5xl mx-auto mb-20 px-4">
    <script
      src="https://giscus.app/client.js"
      data-repo="baeharam/blog"
      data-repo-id="R_kgDOH2yWsA"
      data-category="댓글"
      data-category-id="DIC_kwDOH2yWsM4CWJGx"
      data-mapping="pathname"
      data-strict="0"
      data-reactions-enabled="1"
      data-emit-metadata="0"
      data-input-position="bottom"
      data-theme="preferred_color_scheme"
      data-lang="ko"
      crossorigin="anonymous"
      async
    ></script>
  </section>
</Layout>
